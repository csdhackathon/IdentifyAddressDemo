<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/mydesign"
    tools:context="com.example.sa005gu.swaggersdksamples.MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/pb_logo_white"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentTop="true"
        android:id="@+id/ImgView"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="City :"
        android:textColor="#ffffff"
        android:id="@+id/textView"
        android:layout_below="@+id/ImgView"

        android:layout_alignParentStart="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="State Province :"
        android:textColor="#ffffff"
        android:id="@+id/textView2"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:layout_marginTop="27dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Postal Code :"
        android:textColor="#ffffff"
        android:id="@+id/textView3"
        android:layout_below="@+id/textView2"
        android:layout_alignParentStart="true"
        android:layout_marginTop="29dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Country :"
        android:textColor="#ffffff"
        android:id="@+id/textView4"
        android:layout_below="@+id/textView3"
        android:layout_alignParentStart="true"
        android:layout_marginTop="25dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Address Line1 :"
        android:textColor="#ffffff"
        android:id="@+id/textView5"
        android:layout_below="@+id/textView4"
        android:layout_alignParentStart="true"
        android:layout_marginTop="24dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="AddressLine2 :"
        android:id="@+id/textView6"
        android:textColor="#ffffff"
        android:layout_below="@+id/textView5"
        android:layout_alignParentStart="true"
        android:layout_marginTop="25dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Firm Name :"
        android:id="@+id/textView7"
        android:textColor="#ffffff"
        android:layout_below="@+id/textView6"
        android:layout_alignParentStart="true"
        android:layout_marginTop="31dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textCity"
        android:layout_marginStart="48dp"
        android:text="Lee"
        android:textColor="#ffffff"
        android:layout_alignTop="@+id/textView"
        android:layout_toEndOf="@+id/textView2" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textState"
        android:text="ma"
        android:textColor="#ffffff"
        android:layout_alignTop="@+id/textView2"
        android:layout_alignStart="@+id/textCity" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textCountry"
        android:textColor="#ffffff"
        android:layout_alignTop="@+id/textView4"
        android:text="US"
        android:layout_alignStart="@+id/textState" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textAddressLine1"
        android:layout_below="@+id/textCountry"
        android:textColor="#ffffff"
        android:layout_alignStart="@+id/textCountry"
        android:text="50 water st" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textAddressLine2"
        android:textColor="#ffffff"
        android:layout_alignTop="@+id/textView6"
        android:layout_alignStart="@+id/textAddressLine1" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textFirmName"
        android:textColor="#ffffff"
        android:layout_alignTop="@+id/textView7"
        android:layout_alignStart="@+id/textAddressLine2" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textPostalCode"
        android:textColor="#ffffff"
        android:layout_alignBottom="@+id/textView3"
        android:layout_alignStart="@+id/textState" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Validated Address "
        android:textColor="#ffffff"
        android:id="@+id/textOutput"
        android:layout_marginTop="37dp"
        android:layout_below="@+id/buttonLinear"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_toRightOf="@+id/textView"
        android:layout_toEndOf="@+id/textView" />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:id="@+id/buttonLinear"
        android:layout_below="@+id/textView7"
        android:layout_marginTop="10dp"
        android:weightSum="1">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Validate Address"
        android:id="@+id/buttonValidate"
        android:background="#3E53A4"
        android:textColor="#ffffff"
        android:layout_marginLeft="30dp"

        android:layout_alignLeft="@+id/textOutput"
        android:layout_alignStart="@+id/textOutput"
        android:layout_toLeftOf="@+id/textFirmName"
        android:layout_toStartOf="@+id/textFirmName"
        android:layout_weight="0.22" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
             />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reset"
            android:background="#3E53A4"
            android:textColor="#ffffff"
            android:id="@+id/buttonReset"
            android:layout_toRightOf="@+id/textAddressLine1" />

    </LinearLayout>

</RelativeLayout>
